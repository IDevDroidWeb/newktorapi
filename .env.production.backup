# Production Environment Variables
# Copy this to .env.production

# Database - Use MongoDB Atlas or your production MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/realestate_prod
MONGODB_DATABASE=realestate_prod

# JWT - Use strong, unique keys
JWT_SECRET=change-this-to-a-very-strong-256-bit-secret-key-for-production-use
JWT_ISSUER=your-realestate-app
JWT_AUDIENCE=realestate-mobile-web
JWT_REALM=realestate-secure

# SMS Service - Get real Plivo credentials
PLIVO_AUTH_ID=your_actual_plivo_auth_id_here
PLIVO_AUTH_TOKEN=your_actual_plivo_auth_token_here
PLIVO_PHONE_NUMBER=+1234567890

# Server Configuration
PORT=8080
HOST=0.0.0.0
ENVIRONMENT=production

# File Upload - Use cloud storage for production
UPLOAD_DIR=uploads/
MAX_FILE_SIZE=10485760

# Security - Lower rate limits for production
RATE_LIMIT_PER_MINUTE=30