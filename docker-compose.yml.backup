version: '3.8'

services:
  # Application
  realestate-api:
    build: .
    ports:
      - "8080:8080"
    environment:
      - MONGODB_URI=mongodb://mongodb:27017/realestate_db
      - MONGODB_DATABASE=realestate_db
      - ENVIRONMENT=production
    depends_on:
      - mongodb
    volumes:
      - ./uploads:/app/uploads
    restart: unless-stopped
    networks:
      - realestate-network

  # MongoDB
  mongodb:
    image: mongo:7.0
    ports:
      - "27017:27017"
    environment:
      - MONGO_INITDB_ROOT_USERNAME=admin
      - MONGO_INITDB_ROOT_PASSWORD=strongpassword123
      - MONGO_INITDB_DATABASE=realestate_db
    volumes:
      - mongodb_data:/data/db
      - ./mongo-init:/docker-entrypoint-initdb.d
    restart: unless-stopped
    networks:
      - realestate-network

  # Nginx Reverse Proxy (للإنتاج)
  nginx:
    image: nginx:alpine
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf
      - ./ssl:/etc/ssl/certs
    depends_on:
      - realestate-api
    restart: unless-stopped
    networks:
      - realestate-network

volumes:
  mongodb_data:

networks:
  realestate-network:
    driver: bridge